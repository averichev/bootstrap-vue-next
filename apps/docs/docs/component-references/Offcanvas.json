{
  "$schema": "./schema.json",
  "name": "@bootstrap-vue-next/offcanvas",
  "version": "1.0.0",
  "meta": {
    "title": "Offcanvas",
    "description": "",
    "components": [
      {
        "component": "BOffcanvas",
        "props": [
          {
            "prop": "dismissLabel",
            "type": "string"
          },
          {
            "prop": "modelValue",
            "type": "Booleanish",
            "description": "Open or close the offcanvas"
          },
          {
            "prop": "bodyScrolling",
            "type": "Booleanish",
            "description": "Allow body to to scroll while offcanvas is displayed (TODO)"
          },
          {
            "prop": "backdrop",
            "type": "Booleanish",
            "description": "Disables the backdrop."
          },
          {
            "prop": "placement",
            "type": "string",
            "description": "determines the placement of the offcanvas options : start, end, bottom, top"

          },
          {
            "prop": "title",
            "type": "string",
            "description": "set a title in the header block"
          },
          {
            "prop": "lazy",
            "type": "Booleanish",
            "description": "enable lazy loading for your offcanvas"
          },
          {
            "prop": "noFocus",
            "type": "Booleanish",
            "description": "if set to true disables focus upon opening offcanvas"
          },{
            "prop": "noHeaderClose",
            "type": "Booleanish",
            "description": "enable or disable default header closing option"
          }
          ,{
            "prop": "noCloseOnEsc",
            "type": "Booleanish",
            "description": "enable or disable closing offcanvas with esc"
          },{
            "prop": "backdropVariant",
            "type": "ColorVariant",
            "description": "set color variant of offcanvas"         
          },{
            "prop": "static",
            "type": "Booleanish"
          }
        ],
        "emits": [
          {
            "emit": "update:modelValue",
            "args": [
              {
                "arg": "update:modelValue",
                "description": "",
                "type": "boolean"
              }
            ]
          },
          {
            "args": [],
            "description": "",
            "emit": "show"
          },
          {
            "args": [],
            "description": "",
            "emit": "shown"
          },
          {
            "args": [],
            "description": "",
            "emit": "hide"
          },
          {
            "args": [],
            "description": "",
            "emit": "hidden"
          }
        ],
        "slots": [
          {
            "description": "",
            "name": "title",
            "scope": []
          },
          {
            "description": "",
            "name": "default",
            "scope": []
          }
        ]
      }
    ]
  }
}